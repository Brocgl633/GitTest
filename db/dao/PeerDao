package com.iit.cao.pa3.database.dao;

import com.iit.cao.pa3.database.bean.Peer;

import java.sql.Connection;
import java.util.List;

public interface PeerDao {

    void insert(Connection conn, Peer peer);

    void deleteById(Connection conn,int id);

    void update(Connection conn, Peer peer);

    void deleteByServerNameAndPeerId(Connection conn, String serverName, Integer peerId);

    Peer getPeerByID(Connection conn,int id);

    List<Peer> getAll(Connection conn);

    List<Peer> getPeerByFileName(Connection conn, String name);

    List<Peer> getPeerByFileNameAndSeverName(Connection conn, String serverName, String fileName);

    Peer getOriginalPeer(Connection conn, Peer peer);

    List<Peer> getPeerByPeerIdAndFileName(Connection conn, Integer peerId, String fileName);

    Peer getPeerByFileNameAndType(Connection conn, String fileName, String type);

    List<Peer> getPeerListInSameVersion(Connection conn, Integer peerId, String serverName, String fileName, Integer version);
    Peer getPeerByFileNameAndPeerId(Connection conn, String fileName, int peerId);

}
