package iit_cs586.State;

import iit_cs586.MDA_EFSM;

public class S4 extends State {

    public S4(MDA_EFSM m) {
        mda = m;
    }

    @Override
    public void Activate() {
        System.out.println("Can't activate right now, you can start pump now !!!");
        System.out.println();
    }

    @Override
    public void Start() {
        System.out.println("You have already started !!!");
        System.out.println();
    }

    @Override
    public void PayType(int t) {
        System.out.println("You have already chosen a Pay Type !!!");
        System.out.println();
    }

    @Override
    public void Reject() {
        System.out.println("Can't reject right now !! ");
        System.out.println();
    }

    @Override
    public void Cancel() {
        System.out.println("Can't cancel right now !!!");
        System.out.println();
    }

    @Override
    public void Approved() {
        System.out.println("You have already approved !!!");
        System.out.println();
    }

    @Override
    public void SelectGas(int g) {
        System.out.println("You have already selected a gas !!!");
        System.out.println();
    }

    @Override
    public void StartPump() {
        mda.op.setInitialValue();
        mda.changeState(5);
    }

    @Override
    public void Pump() {
        System.out.println("You haven't started pump yet !!!");
        System.out.println();
    }

    @Override
    public void StopPump() {
        System.out.println("You haven't started pump yet !!!");
        System.out.println();
    }

    @Override
    public void Receipt() {
        System.out.println("You haven't started pump yet !!!");
        System.out.println();
    }

    @Override
    public void NoReceipt() {
        System.out.println("You haven't started pump yet !!!");
        System.out.println();
    }

}
