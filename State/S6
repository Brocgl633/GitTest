package iit_cs586.State;

import iit_cs586.MDA_EFSM;

public class S6 extends State {

    public S6(MDA_EFSM m) {
        mda = m;
    }

    @Override
    public void Activate() {
        System.out.println("Can't activate right now, please choose Receipt or NoPeceipt first !!!");
        System.out.println();
    }

    @Override
    public void Start() {
        System.out.println("You have already started !!!");
        System.out.println();
    }

    @Override
    public void PayType(int t) {
        System.out.println("You have already chosen a Pay Type !!!");
        System.out.println();
    }

    @Override
    public void Reject() {
        System.out.println("Can't cancel right now, please choose Receipt or NoPeceipt first !!!");
        System.out.println();
    }

    @Override
    public void Cancel() {
        System.out.println("Can't cancel right now, please choose Receipt or NoPeceipt first !!!");
        System.out.println();
    }

    @Override
    public void Approved() {
        System.out.println("You have already approved !!!");
        System.out.println();
    }

    @Override
    public void SelectGas(int g) {
        System.out.println("You have already selected a gas !!!");
        System.out.println();
    }

    @Override
    public void StartPump() {
        System.out.println("Can't start pump right now, please choose Receipt or NoPeceipt first !!!");
        System.out.println();
    }

    @Override
    public void Pump() {
        System.out.println("Can't pump right now, please choose Receipt or NoPeceipt first !!!");
        System.out.println();
    }

    @Override
    public void StopPump() {
        System.out.println("You have already stopped pump !!!");
        System.out.println();
    }

    @Override
    public void Receipt() {
        mda.op.printReceipt();
        mda.op.returnCash();
        mda.changeState(0);
    }

    @Override
    public void NoReceipt() {
        mda.op.returnCash();
        mda.changeState(0);
    }

}
