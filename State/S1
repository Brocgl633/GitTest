package iit_cs586.State;

import iit_cs586.MDA_EFSM;

public class S1 extends State {

    public S1(MDA_EFSM m) {
        mda = m;
    }

    @Override
    public void Activate() {
        System.out.println("Can't activate right now !!!");
        System.out.println();
    }

    @Override
    public void Start() {
        System.out.println("You are starting now !!!");
        System.out.println();
    }

    @Override
    public void PayType(int t) {
        if (t == 0) {            // cash
            mda.changeState(3);
            mda.op.storeCash();
            mda.op.setPayTypeFlag(0);
            mda.op.displayMenu();
        } else if (t == 1) {    // credit card
            mda.changeState(2);
            System.out.println("Verifying credit card ......");
            System.out.println();
        } else {
            System.out.println("Please choose credit card(0) or cash again(1) !!!");
            System.out.println();
        }
    }

    @Override
    public void Reject() {
        System.out.println("Please select a payment first !!!");
        System.out.println();
    }

    @Override
    public void Cancel() {
        System.out.println("Please select a payment first !!!");
        System.out.println();
    }

    @Override
    public void Approved() {
        System.out.println("Please select a payment first !!!");
        System.out.println();
    }

    @Override
    public void SelectGas(int g) {
        System.out.println("Please select a payment first !!!");
        System.out.println();
    }

    @Override
    public void StartPump() {
        System.out.println("Please select a payment first !!!");
        System.out.println();
    }

    @Override
    public void Pump() {
        System.out.println("Please select a payment first !!!");
        System.out.println();
    }

    @Override
    public void StopPump() {
        System.out.println("Please select a payment first !!!");
        System.out.println();
    }

    @Override
    public void Receipt() {
        System.out.println("Please select payment first");
        System.out.println();
    }

    @Override
    public void NoReceipt() {
        System.out.println("Please select payment first");
        System.out.println();
    }

}
