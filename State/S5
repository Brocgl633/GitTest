package iit_cs586.State;

import iit_cs586.MDA_EFSM;

public class S5 extends State {

    public S5(MDA_EFSM m) {
        mda = m;
    }

    @Override
    public void Activate() {
        System.out.println("Can't activate right now, it is pumping !!!");
        System.out.println();
    }

    @Override
    public void Start() {
        System.out.println("You have already started !!!");
        System.out.println();
    }

    @Override
    public void PayType(int t) {
        System.out.println("You have already chosen a Pay Type !!!");
        System.out.println();
    }

    @Override
    public void Reject() {
        System.out.println("Can't reject, it is pumping !!!");
        System.out.println();
    }

    @Override
    public void Cancel() {
        System.out.println("Can't cancel, it is pumping !!!");
        System.out.println();
    }

    @Override
    public void Approved() {
        System.out.println("You have already approved !!!");
        System.out.println();
    }

    @Override
    public void SelectGas(int g) {
        System.out.println("You have already selected a gas !!!");
        System.out.println();
    }

    @Override
    public void StartPump() {
        System.out.println("You have already started pump !!!");
        System.out.println();
    }

    @Override
    public void Pump() {
        mda.op.pumpGasUnit();
        mda.op.gasPumpedMsg();
    }

    @Override
    public void StopPump() {
        mda.changeState(6);
    }

    @Override
    public void Receipt() {
        System.out.println("You haven't stopped pump yet !!!");
        System.out.println();
    }

    @Override
    public void NoReceipt() {
        System.out.println("You haven't stopped pump yet !!!");
        System.out.println();
    }

}
